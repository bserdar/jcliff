name=jdbc-driver
getContents=/subsystem=datasources:read-children-resources(child-type=jdbc-driver)
server.preprocess.prepend=/jdbc-driver

match.addDriver=add:/jdbc-driver/*
addDriver.rule.1=/subsystem=datasources/jdbc-driver=${name(.)}:add(driver-name=${value(driver-name)},driver-module-name=${value(driver-module-name)},driver-xa-datasource-class-name=${value(driver-xa-datasource-class-name)})

